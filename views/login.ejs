<%- include("includes/start") %>
<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand m-auto h1">DevTik HR</span>
  </div>
</nav>
<section class="mt-5 pt-5 mb-5 pb-5">
  <form action="/login" method="POST" class="m-auto w-50 pt-5">
    <% if (message == "loginError") { %>
    <div class="alert alert-danger" role="alert">
      Email Or Password Are Inccorect Please Try Again With Valid Data
    </div>
    <% } %> <% if (message == "authError") { %>
    <div class="alert alert-danger" role="alert">
      You Have To Login First To Access This Page
    </div>
    <% } %> <% if (message == "accessError") { %>
    <div class="alert alert-danger" role="alert">
      You Don't Have The Permission To Access This Page
    </div>
    <% } %>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Username</label>
      <input
        type="text"
        name="username"
        class="form-control"
        id="exampleInputUsername1"
        aria-describedby="usernameHelp"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input
        type="password"
        name="password"
        class="form-control"
        id="exampleInputPassword1"
      />
    </div>
    <div class="d-grid gap-2 col-6 mx-auto pt-3">
      <button type="submit" class="btn btn-primary btn-block" type="button">
        Login
      </button>
    </div>
  </form>
</section>
