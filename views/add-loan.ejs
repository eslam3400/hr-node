<%- include("includes/navbar") %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title">
              Add Loan To <%= user.firstName + ' ' + user.lastName %>
            </h4>
            <p class="card-category">Add the amount of money to loan</p>
          </div>
          <div class="card-body">
            <form
              action="/employee/loan/<%= user.id%>"
              method="post"
              class="w-100 p-5"
            >
              <div class="form-row">
                <div class="form-group col-md-12">
                  <input
                    type="number"
                    class="form-control"
                    name="loan_value"
                    placeholder="Loan..."
                  />
                </div>
              </div>
              <button type="submit" class="btn btn-primary mt-5">Add</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("includes/footer") %>
