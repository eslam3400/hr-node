<%- include("includes/navbar") %>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title">
              Update Empolyee <%= user.firstName + ' ' + user.lastName %>
            </h4>
            <p class="card-category">Change this employee data</p>
          </div>
          <div class="card-body">
            <form
              action="/employee/update/<%= user.id %> "
              method="post"
              class="w-100 p-5"
            >
              <div class="form-row">
                <div class="form-group col-md-12">
                  <input
                    type="text"
                    class="form-control"
                    name="firstName"
                    placeholder="First Name"
                    value="<%= user.firstName %>"
                  />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-12">
                  <input
                    type="text"
                    class="form-control"
                    name="lastName"
                    placeholder="Last Name"
                    value="<%= user.lastName %>"
                  />
                </div>
              </div>
              <div class="form-row d-flex align-items-center">
                <div class="form-group col-md-6">
                  <input
                    type="text"
                    class="form-control"
                    name="salary"
                    placeholder="Salary"
                    value="<%= user.salary %>"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label for="job">Job Title</label>
                  <select name="job_id" id="job" class="form-control">
                    <option value="NULL">Choose A Job Title...</option>
                    <% jobs.forEach(job => { %>
                    <option value="<%= job.id %>" <% if (user.job_id == job.id) { %>
                       <%= 'selected' %> 
                      <% } %> ><%= job.name %></option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6 mt-4">
                  <label for="startTime">Start Time</label>
                  <input
                    type="time"
                    class="form-control"
                    name="startTime"
                    id="startTime"
                    value="<%= user.startTime %>"
                  />
                </div>
                <div class="form-group col-md-6 mt-4">
                  <label for="endTime">End Time</label>
                  <input
                    type="time"
                    class="form-control"
                    name="endTime"
                    id="endTime"
                    value="<%= user.endTime %>"
                  />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="pranch">Pranch</label>
                  <select id="pranch" name="pranch_id" class="form-control">
                    <option value="NULL" selected>Choose Pranch...</option>
                    <% pranchs.forEach(pranch => { %>
                    <option value="<%= pranch.id %>" <% if (user.pranch_id == pranch.id) { %>
                      <%= 'selected' %> 
                     <% } %> >
                      <%= pranch.name %>
                    </option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <button type="submit" class="btn btn-primary mt-5">Update</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("includes/footer") %>
