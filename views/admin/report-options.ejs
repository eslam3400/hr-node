<%- include('includes/start') %>
  <div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
      <div class="min-height-200px">
        <!-- horizontal Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
          <div class="clearfix">
            <div class="pull-left">
              <h4 class="text-blue h4">
                Select Reports Date
              </h4>
            </div>
          </div>
          <div>
            <div class="form-group col-6">
              <label>Year</label>
              <input type="number" class="form-control" id="year" name="year" placeholder="Year..." />
            </div>
            <div class="form-group col-6">
              <label>Month</label>
              <input type="number" class="form-control" id="month" name="month" placeholder="Month..." />
            </div>
            <button id="get" class="btn btn-primary">Get</button>
          </div>
        </div>
        <!-- horizontal Basic Forms End -->
      </div>
      <%- include('includes/end') %>
        <script>
          $("#get").click(() => {
            const myLocation = `/admin/reports/${$("#year").val()}/${$("#month").val()}`
            location.href = myLocation;
          });
        </script>
    </div>
  </div>