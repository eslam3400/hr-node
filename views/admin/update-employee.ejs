<%- include('includes/start') %>
<div class="main-container">
  <div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
      <!-- horizontal Basic Forms Start -->
      <div class="pd-20 card-box mb-30">
        <div class="clearfix">
          <div class="pull-left">
            <h4 class="text-blue h4">
              Update Empolyee <%= user.firstName + ' ' + user.lastName %>
            </h4>
            <p class="mb-30">
              Complete this form to update employee data in the database
            </p>
          </div>
        </div>
        <form
          action="/employee/update/<%= user.id %>"
          method="post"
        >
        <div class="form-row">
          <div class="form-group col-md-12">
            <label>First Name</label>
            <input
              type="text"
              class="form-control"
              name="firstName"
              placeholder="First Name"
              value="<%= user.firstName %>"
            />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <label>Last Name</label>
            <input
              type="text"
              class="form-control"
              name="lastName"
              placeholder="Last Name"
              value="<%= user.lastName %>"
            />
          </div>
        </div>
        <div class="form-row d-flex align-items-center">
          <div class="form-group col-md-6">
            <label>Salary</label>
            <input
              type="text"
              class="form-control"
              name="salary"
              placeholder="Salary"
              value="<%= user.salary %>"
            />
          </div>
          <div class="form-group col-md-6">
            <label for="job">Job Title</label>
            <select name="job_id" id="job" class="form-control">
              <option value="NULL">Choose A Job Title...</option>
              <% jobs.forEach(job => { %>
              <option value="<%= job.id %>" <% if (user.job_id == job.id) { %>
                 <%= 'selected' %> 
                <% } %> ><%= job.name %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6 mt-4">
            <label for="startTime">Start Time</label>
            <input
              type="time"
              class="form-control"
              name="startTime"
              id="startTime"
              value="<%= user.startTime %>"
            />
          </div>
          <div class="form-group col-md-6 mt-4">
            <label for="endTime">End Time</label>
            <input
              type="time"
              class="form-control"
              name="endTime"
              id="endTime"
              value="<%= user.endTime %>"
            />
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="pranch">Pranch</label>
            <select id="pranch" name="pranch_id" class="form-control">
              <option value="NULL" selected>Choose Pranch...</option>
              <% pranchs.forEach(pranch => { %>
              <option value="<%= pranch.id %>" <% if (user.pranch_id == pranch.id) { %>
                <%= 'selected' %> 
               <% } %> >
                <%= pranch.name %>
              </option>
              <% }) %>
            </select>
          </div>
        </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
      <!-- horizontal Basic Forms End -->
    </div>
    <%- include('includes/end') %>
  </div>
</div>
